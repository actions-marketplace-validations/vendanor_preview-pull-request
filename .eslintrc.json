{
    "plugins": ["@typescript-eslint"],
//    "extends": ["plugin:github/recommended"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "rules": {
      "eslint-comments/no-use": "off",
      "import/no-namespace": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "camelcase": "off",
      "semi": "off"
    },
    "env": {
      "node": true,
      "es6": true
    }
  }
